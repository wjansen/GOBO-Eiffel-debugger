<?xml version="1.0"?>

<project name="persistence" default="help">

	<description>
		system: "Gobo Eiffel Persistence Closure Examples Tester"
		copyright: "Copyright (c) 2015, Wolfgang Jansen and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/misc/test.eant">
			<redefine target="other_clean"/>
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="other_clean" depend="init_system">
		<description>
			Remove other intermediary generated files.
		</description>

		<delete directory="Tpersist"/>
	</target>

	<target name="init_system">
		<set name="system" value="xpersist"/>
		<set name="library" value="persistence"/>
		<set name="system_dir" value="${GOBO}/test/${library}"/>
	</target>

</project>
