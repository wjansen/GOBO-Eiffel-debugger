<?xml version="1.0"?>

<system name="xdemo">
	<description>
		system: "Gobo Eiffel Persistence Closure Examples Tester"
		copyright: "Copyright (c) 2001-2015, Wolfgang Jansen and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<root class="XDEMO" creation="make"/>
	<option name="console_application" value="true"/>
	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="garbage_collector" value="none"/>
		<option name="debugger" value="true"/>
	</option>
	<option if="${DEBUG}">
		<option name="assertion" value="all"/>
		<option name="garbage_collector" value="internal"/>
		<option name="finalize" value="false"/>
	</option>
	<option if="${GOBO_DOTNET}">
		<option name="msil_generation" value="true"/>
		<option name="line_generation" value="true"/>
	</option>

	<cluster name="persist_tester" location="${GOBO}/test/example" prefix="example_">
		<option name="abstract" value="true"/>
		<cluster name="persist"/>
		<cluster name="common"/>
	</cluster>
	<cluster name="test_common" location="${GOBO}/test/common"/>
	<cluster name="example_persist_testgen" location="TESTGEN"/>
	<mount location="${GOBO}/library/library.xace"/>
	<mount location="${GOBO}/library/kernel.xace"/>
</system>
